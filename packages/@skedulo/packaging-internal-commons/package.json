{
  "name": "@skedulo/packaging-internal-commons",
  "version": "0.0.13",
  "description": "Utilities for development of Packaging projects",
  "author": "Skedulo",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "bootstrap": "yarn install --pure-lockfile",
    "test": "jest",
    "dev": "yarn gen-schema && microbundle watch --tsconfig ./tsconfig.json -f cjs",
    "gen-schema": "typescript-json-schema ./tsconfig.json '*' --include='src/**/*.def.ts' --titles --required --excludePrivate --aliasRefs --validationKeywords --out=./src/schema.definition.json",
    "build": "yarn gen-schema && microbundle --tsconfig ./tsconfig.json -f cjs",
    "release-package": "yarn build && yarn publish --new-version"
  },
  "files": [
    "dist/",
    "package.json",
    "yarn.lock"
  ],
  "devDependencies": {
    "@types/jest": "^25.1.1",
    "@types/node": "^13.5.0",
    "jest": "^25.1.0",
    "microbundle": "^0.14.2",
    "ts-jest": "^25.1.0",
    "typescript": "^3.9.0",
    "typescript-json-schema": "^0.42.0"
  },
  "dependencies": {
    "ajv": "^6.11.0"
  }
}
