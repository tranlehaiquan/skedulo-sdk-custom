{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "jsx": "react",
    "moduleResolution": "node",
    "lib": [
      "es2018",
      "dom"
    ],
    "declaration": false,
    "rootDir": "./src",
    "outDir": "app/",
    "strict": true,
    "strictFunctionTypes": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/node_modules/@skedulo/**/*.d.ts",
  ],
  "exclude": [
    "src/tests/**/*",
    "jest"
  ]
}
