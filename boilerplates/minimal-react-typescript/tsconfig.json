{
  "compilerOptions": {
    "outDir": "build/dist",
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es5",
    "lib": [
      "es6",
      "es2017",
      "dom",
      "esnext.asynciterable"
    ],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "rootDir": "src",
    "strict": true,
    "noUnusedLocals": false,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
  ],
  "include": [
    "src/**/*.d.ts",
    "src/**/*.ts"
  ]
}
