{
  "name": "skedulo-sdk",
  "version": "1.0.0",
  "description": "",
  "main": "./app/index.js",
  "homepage": "https://new.skedulo.com",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "bootstrap": "yarn install --pure-lockfile && cd src && yarn install --pure-lockfile",
    "node-run": "node --turbo --ignition",
    "node-run-dev": "yarn node-run -r ts-node/register",
    "dev-node": "nodemon --watch src -e ts,js -x 'yarn node-run-dev' src/server/server.ts",
    "copy-static": "shx mkdir -p app && shx cp src/*.json app/ && shx cp src/*.{html,md} app/ && shx cp -R src/assets app/ && cd app && shx ln -sf ../src/node_modules ./node_modules",
    "compile-scripts": "tsc",
    "compile-styles": "node-sass src/scss/main.scss app/scss/main.css",
    "watch-scripts": "tsc --watch",
    "watch-styles": "yarn compile-styles --watch",
    "compile": "yarn compile-scripts && yarn compile-styles && yarn copy-static",
    "start-ui": "electron ./",
    "lint": "tslint --project ./",
    "start": "rm -rf app && rm -rf dist && yarn compile && electron ./",
    "pack": "yarn compile && electron-builder --dir",
    "dist": "yarn compile && electron-builder",
    "expose": "shx mkdir -p ../frontend/public/apps/ && shx cp dist/skedulo-sdk-v1.zip ../frontend/public/apps/ && shx cp dist/skedulo-sdk-v1.exe ../frontend/public/apps/",
    "dev": "yarn copy-static && yarn compile-styles && node ./tools/watch-web.js",
    "dev-ui": "cross-env NODE_ENV=development nodemon -x yarn start-ui ./"
  },
  "jest": {
    "testMatch": [
      "<rootDir>/src/tests/**/*.test.(ts|tsx)"
    ],
    "moduleFileExtensions": [
      "js",
      "ts",
      "tsx"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "setupFiles": [
      "<rootDir>/src/tests/jestsetup.js"
    ],
    "snapshotSerializers": [
      "<rootDir>/src/node_modules/enzyme-to-json/serializer"
    ],
    "coverageReporters": [
      "lcov"
    ],
    "coverageDirectory": "<rootDir>/src/tests/coverage",
    "collectCoverageFrom": [
      "src/web/**/*.{ts,tsx}"
    ],
    "globals": {
      "ts-jest": {
        "tsConfigFile": "./tsconfig.json"
      }
    }
  },
  "nodemonConfig": {
    "watch": [
      "app/"
    ],
    "ignore": [
      "app/web/"
    ],
    "ext": "js"
  },
  "build": {
    "appId": "com.skedulo.sdk",
    "artifactName": "skedulo-sdk-v1.${ext}",
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": "zip"
    },
    "win": {
      "target": "portable"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "author": "Skedulo",
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/jest": "^21.1.8",
    "cross-env": "^5.1.1",
    "electron": "1.8.2-beta.2",
    "electron-builder": "^19.45.4",
    "jest": "^21.2.1",
    "node-sass": "^4.6.1",
    "nodemon": "^1.12.1",
    "shelljs": "^0.7.8",
    "shx": "^0.2.2",
    "ts-jest": "^21.2.3",
    "ts-node": "3.3.0",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  }
}
